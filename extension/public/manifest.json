{
  "manifest_version": 3,
  "name": "devBlog.kr - 개발 블로그 모음",
  "version": "1.0.0",
  "description": "한국 개발 기업들의 기술 블로그를 한 곳에서 읽기",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://devblog.kr/*", "https://www.devblog.kr/*", "http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "devBlog.kr",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
